{
  "title": "Minimal Kanata-style layers with caps lock and hjkl-arrows via ` key",
  "rules": [
    {
      "description": "Caps Lock: tap for Escape, hold for Control (more responsive)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": { "optional": ["any"] }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 100
          },
          "to_if_alone": [
            { "key_code": "escape" }
          ],
          "to_if_held_down": [
            { "key_code": "left_control" }
          ]
        }
      ]
    },
    {
      "description": "ยง (` key): tap for `, shift+tap for ~, hold to activate arrow layer (hjkl)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash",
            "modifiers": { "optional": ["any"] }
          },
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 200
          },
          "to_if_alone": [
            { "key_code": "grave_accent_and_tilde" }
          ],
          "to_if_held_down": [
            {
              "set_variable": {
                "name": "arrow_layer",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "arrow_layer",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "hjkl to arrows when arrow_layer is active",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "h", "modifiers": { "optional": ["any"] } },
          "to": [ { "key_code": "left_arrow" } ],
          "conditions": [ { "type": "variable_if", "name": "arrow_layer", "value": 1 } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "j", "modifiers": { "optional": ["any"] } },
          "to": [ { "key_code": "down_arrow" } ],
          "conditions": [ { "type": "variable_if", "name": "arrow_layer", "value": 1 } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "k", "modifiers": { "optional": ["any"] } },
          "to": [ { "key_code": "up_arrow" } ],
          "conditions": [ { "type": "variable_if", "name": "arrow_layer", "value": 1 } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "l", "modifiers": { "optional": ["any"] } },
          "to": [ { "key_code": "right_arrow" } ],
          "conditions": [ { "type": "variable_if", "name": "arrow_layer", "value": 1 } ]
        }
      ]
    }
  ]
}
