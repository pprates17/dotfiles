# Run `ghostty +show-config --default --docs` to view a list of
# all available config options and their default values.

#General
theme = TokyoNight
background-opacity = 0.9
font-family = "FiraCode Nerd Font"
#gtk-custom-css = tab-style.css
window-save-state = always
gtk-wide-tabs = false

#Keybinds
keybind = ctrl+a>t=new_tab
keybind = ctrl+a>x=close_surface
keybind = ctrl+a>|=new_split:left
keybind = ctrl+a>-=new_split:down

#Move between splits
keybind = ctrl+k=goto_split:up
keybind = ctrl+j=goto_split:down
keybind = ctrl+l=goto_split:right
keybind = ctrl+h=goto_split:left

#Resize splits
keybind = alt+k=resize_split:up,40
keybind = alt+j=resize_split:down,40
keybind = alt+l=resize_split:right,40
keybind = alt+h=resize_split:left,40
keybind = ctrl+a>z=toggle_split_zoom

#Tabs
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

keybind = ctrl+a>d=toggle_window_decorations
gtk-tabs-location = bottom
