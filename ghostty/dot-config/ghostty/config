# Run `ghostty +show-config --default --docs` to view a list of
# all available config options and their default values.

#General
theme = Kanagawa Wave
background-opacity = 0.95
font-family = "FiraCode Nerd Font"

#Keybinds
keybind = ctrl+a>t=new_tab
keybind = ctrl+a>x=close_surface
keybind = ctrl+a>|=new_split:left
keybind = ctrl+a>-=new_split:down

#Move between splits
keybind = ctrl+a>k=goto_split:up
keybind = ctrl+a>j=goto_split:down
keybind = ctrl+a>l=goto_split:right
keybind = ctrl+a>h=goto_split:left

#Resize splits
keybind = ctrl+a>alt+k=resize_split:up,40
keybind = ctrl+a>alt+j=resize_split:down,40
keybind = ctrl+a>alt+l=resize_split:right,40
keybind = ctrl+a>alt+h=resize_split:left,40
keybind = ctrl+a>z=toggle_split_zoom

#Tabs
keybind = ctrl+a>n=next_tab
keybind = ctrl+a>p=previous_tab

keybind = ctrl+a>d=toggle_window_decorations
keybind = ctrl+a>z=toggle_maximize
